pipeline {
    agent any

    tools {
        maven 'Maven 3.8.5' // Jenkins tool config name
        jdk 'Java 17'        // Jenkins tool config name
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/student-management.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Build and tests passed!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
